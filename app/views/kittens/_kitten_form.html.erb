<%= form_for(@kitten) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <%= f.label :cuteness %>
  <%= f.text_field :cuteness %>
  <%= f.label :softness %>
  <%= f.text_field :softness %>
  <%= f.submit %>
<% end %>
<% if current_page?("kittens#edit") %>
  <%= link_to "Back", @kitten %>
<% else %>
  <%= link_to "Back", kittens_path %>
<% end %>
<%= link_to "Destroy", @kitten, method: :delete, data: { confirm: "Are you sure?" } %>